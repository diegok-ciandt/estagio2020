<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMedium</item>
        <item name="colorPrimaryDark">@color/colorHigh</item>
        <item name="colorAccent">@color/colorLow</item>
        <item name="android:buttonStyle">@style/style_main_btn</item>
    </style>

    <style name="style_main_btn" parent="@android:style/Widget.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/colorHigh</item>
    </style>

</resources>
